{
  "name": "@adobe/helix-api-service",
  "version": "1.3.0",
  "private": true,
  "description": "Helix Admin API Service",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "nodemon",
    "test": "c8 mocha --ignore=test/post-deploy.test.js --spec=test/**/*.test.js",
    "test-postdeploy": "mocha --spec=test/post-deploy.test.js",
    "lint": "eslint .",
    "semantic-release": "semantic-release",
    "commit": "git-cz",
    "build": "hedy -v",
    "deploy": "hedy -v --deploy --test",
    "deploy-routes": "hedy --no-build --no-hints -l major",
    "deploy-ci": "hedy -v --deploy --test --pkgVersion=ci$CI_BUILD_NUM -l ci --cleanup-ci 24h",
    "prepare": "husky"
  },
  "wsk": {
    "nodeVersion": 22,
    "target": "aws",
    "name": "helix3/api-service@${version}",
    "testUrl": "/_status_check/healthcheck.json",
    "memory": 2048,
    "fastlyServiceId!important": "",
    "awsRole!important": "arn:aws:iam::118435662149:role/helix-role-api-service",
    "awsAttachAuthorizer": "helix-token-authorizer_v2"
  },
  "mocha": {
    "require": [
      "nock",
      "test/setup-env.js",
      "mocha-suppress-logs"
    ],
    "recursive": "true",
    "reporter": "mocha-multi-reporters",
    "reporter-options": "configFile=.mocha-multi.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adobe/helix-api-service"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/adobe/helix-api-service/issues"
  },
  "homepage": "https://github.com/adobe/helix-api-service#readme",
  "dependencies": {
    "@adobe/fetch": "4.2.3",
    "@adobe/helix-admin-support": "5.0.1",
    "@adobe/helix-config": "5.6.8",
    "@adobe/helix-google-support": "4.0.0",
    "@adobe/helix-onedrive-support": "12.1.1",
    "@adobe/helix-shared-body-data": "2.2.1",
    "@adobe/helix-shared-secrets": "2.2.10",
    "@adobe/helix-shared-server-timing": "1.0.0",
    "@adobe/helix-shared-storage": "1.5.0",
    "@adobe/helix-shared-string": "2.1.0",
    "@adobe/helix-shared-tokencache": "1.5.0",
    "@adobe/helix-shared-utils": "3.0.2",
    "@adobe/helix-shared-wrap": "2.0.2",
    "@adobe/helix-status": "10.1.5",
    "aws4": "1.13.2",
    "cookie": "1.0.2",
    "fast-xml-parser": "5.2.5",
    "jose": "6.1.0",
    "private-ip": "3.0.2"
  },
  "devDependencies": {
    "@adobe/eslint-config-helix": "3.0.11",
    "@adobe/helix-deploy": "13.1.17",
    "@adobe/helix-universal": "5.2.3",
    "@adobe/helix-universal-devserver": "1.1.141",
    "@adobe/semantic-release-coralogix": "1.1.39",
    "@eslint/config-helpers": "0.4.0",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/exec": "7.1.0",
    "@semantic-release/git": "10.0.1",
    "c8": "10.1.3",
    "dotenv": "17.2.2",
    "eslint": "9.4.0",
    "husky": "9.1.7",
    "junit-report-builder": "5.1.1",
    "lint-staged": "16.2.3",
    "mocha": "11.7.2",
    "mocha-multi-reporters": "1.5.1",
    "mocha-suppress-logs": "0.6.0",
    "nock": "13.5.6",
    "nodemon": "3.1.10",
    "semantic-release": "24.2.9",
    "semantic-release-slack-bot": "4.0.2",
    "sinon": "21.0.0"
  },
  "lint-staged": {
    "*.js": "eslint"
  },
  "nodemonConfig": {
    "exec": "node --inspect ./test/dev/server.mjs",
    "watch": [
      ".env",
      "."
    ],
    "ext": ".js, .cjs, .ejs, .css"
  }
}
